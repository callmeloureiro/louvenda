

  <!-- Start Page Header -->
  <div class="page-header">
    <h1 class="title">Adicionar novo método de pagamento</h1>
    <ol class="breadcrumb">
      <li class="active">This is a quick overview of some features</li>
    </ol>

  </div>

  <div class="container-default">

    <div class="row">

      <div class="col-md-4">
        <%= form_for @payment, :url => { :action => 'create' }, :html => { :class => 'form-horizontal' } do |f| %>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.label :name, "Nome do pagamento" , class: "control-label form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.submit 'Salvar', :class => 'btn btn-default right' %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-8">

        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <td>Nome</td>
              <td>Quantidade</td>
              <td>Ações</td>
            </tr>
          </thead>
          <tbody>
            <% @payments.each do |c| %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.sale.count %></td>
              <td>
              <%= link_to edit_painel_payment_path(c) do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to painel_payment_path(c), method: :delete, data: { confirm: "Você tem certeza?" } do %>
                <i class="fa fa-close"></i>
              <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>

    </div>

  </div>

