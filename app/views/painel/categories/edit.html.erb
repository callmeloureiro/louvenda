 <!-- Start Page Header -->
  <div class="page-header">
    <h1 class="title">Adicionar nova categoria de produto</h1>
    <ol class="breadcrumb">
      <li class="active">This is a quick overview of some features</li>
    </ol>

  </div>

  <div class="container-default">

    <div class="row">

      <div class="col-md-4">
        <%= form_for @category, :url => { :action => 'update' }, :html => { :class => 'form-horizontal' } do |f| %>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.label :name, "Nome da categoria" , class: "control-label form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <%= f.submit 'Salvar', :class => 'btn btn-default right' %>
            </div>
          </div>
        <% end %>
      </div>

    </div>

  </div>