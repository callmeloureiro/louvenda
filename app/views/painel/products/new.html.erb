<!-- Start Page Header -->
<div class="page-header">
  <h1 class="title">Adicionar um produto</h1>

</div>
<!-- End Page Header -->

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <%= form_for @product, :url => { :action => "create" }, :html => { :class => "form-horizontal" } do |f| %>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.label :sku, "Código" , class: "control-label form-label" %>
            <%= f.text_field :sku, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.label :name, "Nome do Produto" , class: "control-label form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.label :category_id, "Categoria do Produto" , class: "control-label form-label" %>
            <%= collection_select(:product, :category_id, Category.all, :id, :name, { :prompt => "Selecione uma categoria" }, { :class=>'form-control'}) %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.label :price, "Preço" , class: "control-label form-label" %>
            <%= f.text_field :price, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.label :quantify, "Quantidade" , class: "control-label form-label" %>
            <%= f.text_field :quantify, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-12">
            <%= f.submit 'Salvar', :class => 'btn btn-default right' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>